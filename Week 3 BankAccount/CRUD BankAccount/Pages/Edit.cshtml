@page
@model IndexModel
@{
    ViewData["Title"] = "Account Holders";
}

<h1>Account Holders</h1>

<p>
    <a asp-page="Create" class="btn btn-success">Create New Account Holder</a>
</p>

<table class="table table-striped">
    <thead>
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Account Balance</th>
        <th>Phone</th>
        <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var holder in Model.AccountHolders)
    {
        <tr>
            <td>@holder.Name</td>
            <td>@holder.Email</td>
            <td>@holder.AccountBalance</td>
            <td>@holder.PhoneNumber</td>
            <td>
                <a asp-page="Details" asp-route-id="@holder.Id" class="btn btn-info btn-sm">Details</a>
                <a asp-page="Delete" asp-route-id="@holder.Id" class="btn btn-danger btn-sm">Delete</a>
            </td>
        </tr>
    }
    </tbody>
</table>

