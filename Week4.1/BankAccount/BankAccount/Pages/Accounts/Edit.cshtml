@page
@model EditModel
@{
    ViewData["Title"] = "Edit Account";
}

<h1>Edit Account</h1>

<form method="post" class="row g-3">
    <input type="hidden" asp-for="Account.Id" />

    <div class="col-md-6">
        <label asp-for="Account.FullName" class="form-label"></label>
        <input asp-for="Account.FullName" class="form-control" />
        <span asp-validation-for="Account.FullName" class="text-danger"></span>
    </div>

    <div class="col-md-6">
        <label asp-for="Account.Email" class="form-label"></label>
        <input asp-for="Account.Email" class="form-control" />
        <span asp-validation-for="Account.Email" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Account.AccountNumber" class="form-label"></label>
        <input asp-for="Account.AccountNumber" class="form-control" />
        <span asp-validation-for="Account.AccountNumber" class="text-danger"></span>
    </div>

    <div class="col-md-4">
        <label asp-for="Account.AccountType" class="form-label"></label>
        <select asp-for="Account.AccountType" class="form-select" asp-items="Html.GetEnumSelectList<Models.AccountType>()"></select>
        <span asp-validation-for="Account.AccountType" class="text-danger"></span>
    </div>

    <div class="col-12">
        <button type="submit" class="btn btn-primary">Save</button>
        <a class="btn btn-secondary" href="/">Cancel</a>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
