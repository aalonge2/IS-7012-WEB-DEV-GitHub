        <!-- Team Member 3 -->
        <div class="col-md-4 text-center">
            <img src="@Url.Content("~/bob.jpg")" alt="Bob" class="rounded-circle img-fluid mb-3" style="width: 50px; height: 50px;">
            <h5>Bob</h5>
